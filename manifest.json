{

  "manifest_version": 2,
  "name": "Brewconvert",
  "version": "0.1",

  "permissions": [
    "contextMenus",
    "activeTab"
  ],

  "description": "Convert highlighted text to different units.",
  "default_locale": "en",
  "icons": {
    "48": "icons/border-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
}]

}
