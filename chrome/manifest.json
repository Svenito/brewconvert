{
	"name": "Brew Convert",
	"description": "Convert highlighted text to different units common for homebrewing",
	"version": "0.8",
	"permissions": [
		"contextMenus",
		"storage"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"icons": {
		"16": "icons/brewvert_16.png",
		"48": "icons/brewvert_48.png",
		"128": "icons/brewvert_128.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

    "content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"manifest_version": 2
}